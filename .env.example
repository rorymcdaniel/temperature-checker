# Temperature Checker Configuration

# Location Settings
ZIP_CODE=12345

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Temperature Thresholds (Fahrenheit)
# Cooling mode: Close windows when temp reaches this AND forecast high > FORECAST_HIGH_THRESHOLD
CLOSE_WINDOWS_TEMP=78
# Open windows when temp drops to or below this
OPEN_WINDOWS_TEMP=76
# Only trigger close notification if daily high forecast exceeds this
FORECAST_HIGH_THRESHOLD=80

# Heating mode thresholds
# Close windows when temp drops to or below this
HEATING_CLOSE_TEMP=55
# Open windows when temp reaches this AND forecast high < HEATING_FORECAST_LOW_THRESHOLD
HEATING_OPEN_TEMP=65
# Only trigger open notification if daily high forecast is below this
HEATING_FORECAST_LOW_THRESHOLD=70

# Quiet Hours (24-hour format)
# No notifications will be sent during these hours
QUIET_START_HOUR=22
QUIET_START_MINUTE=30
QUIET_END_HOUR=7
QUIET_END_MINUTE=0

# Default mode: 'cooling' or 'heating'
DEFAULT_MODE=cooling

# Database file path
DATABASE_PATH=temperature_checker.db